$color      = black
$bg         = white
$graytext   = #bbb
$activetext = rgb(0, 163, 255)
$redcolor   = #991616
$darkbg     = #2D323A


.dragbar
  position: fixed
  /*border: 1px solid red
  background: rgba(red, 0.1)*/
  z-index: 11
  top: 0
  left: 0
  right: 0
  height: 15px

.win-btn
  position fixed
  z-index  12
  top      11px
  display  block
  height   11px
  width    11px
  text-decoration none
  color transparent
  border-radius 50%
  border 1px solid #ebebeb
  background #f2f2f2
  margin-right 4px
  cursor default
  -webkit-app-region: no-drag


.win-close
  left     11px
.win-minim
  left     33px
.win-maxim
  left     55px


.win-close:hover
  background rgba(red, 0.2)
  border-color brown
.win-minim:hover
  background rgba(yellow, 0.3)
  border-color darken(yellow, 10)
.win-maxim:hover
  background rgba(green, 0.2)
  border-color green

.theme-btn
  position fixed
  bottom 6px
  right 11px

.theme-icon
  display inline-block
  height  14px
  width   14px
  background #ddd
  border-radius 50%
  position relative
  &:hover
    background #bbb
  &:after
    content ""
    background white
    position absolute
    border-radius 50%
    left    35%
    top     0
    z-index 2
    height  100%
    width   100%
  .dark-theme &
    background transparent
    &:hover:after
      color rgba(white, 0.3)
    &:after
      content 'â˜€'
      left -4px
      top -8px
      font-size 130%
      color rgba(white, 0.1)
      background transparent


.dark-theme
  background: $darkbg
  color: #aaa
  .nav
    background: $darkbg
    border-color: rgba(white,0.08)
    li
      color gray
    .activetab
      color white
  .win-btn
    border 1px solid rgba(white,0.05)
    background rgba(white,0.06)
  ::-webkit-scrollbar-thumb
    background: rgba(255,255,255,0.2)


.actions
  position: absolute
  right    0
  left     0
  width    100%
  z-index  200
  padding: 11px
  // padding 0 1em
  a
    //display: inline-block
    //text-decoration: none
