$size = 200px
$thumb = 10px
$bg = white

$transparencygrid = 
  background-size: 22px 22px;
  background-position: 0 0, 11px 11px;
  background-image: linear-gradient(45deg, rgba(120,120,120,0.3) 25%, transparent 25%, transparent 75%, rgba(120,120,120,0.3) 75%, rgba(100,100,100,0.2)),
                    linear-gradient(45deg, rgba(120,120,120,0.3) 25%, transparent 25%, transparent 75%, rgba(120,120,120,0.3) 75%, rgba(100,100,100,0.2));


.c-picker *
  // outline red 1px solid

.c-picker
  -webkit-app-region: no-drag
  position fixed
  top  0
  left 0
  z-index 120
  line-height 0
  border-radius 2px
  // border 2px solid #444
  box-shadow 0 1px 1px 1px rgba(0,0,0,0.1), 0 8px 30px rgba(0,0,0,0.05)
  background white
  padding 0px 0px 8px

.c-preview
  height 50px
  margin-bottom 10px
  position relative
  &:before
    content ""
    position absolute
    z-index -1
    top 0
    right 0
    left 0
    bottom 0
    {$transparencygrid}

.c-bg
  display inline-block

.c-format
  background white
  display inline-block
  height $size
  vertical-align middle
  padding 1em
  font-family Consolas
  font-size 12px
  color #aaa
  display none
  div
    line-height normal

.c-hue, .c-value, .c-opacity
  padding 0
  margin: 0 10px
  display inline-block
  vertical-align middle

.c-value
  margin 0 5px

.c-opacity
  margin-right 15px !important

.c-alpha
  width 4px !important
  height: $size - $thumb !important
  border-radius: 2px
  box-shadow inset 0 0 1px rgba(0,0,0,0.2)


.c-slider, .c-wheel
  height $size
  width 10px //$thumb
  display inline-block
  background blue
  position relative

.c-wheel
  cursor: ns-resize



.c-precise
  display none

.c-wheel
  &:after
    content ""
    position absolute
    top 50%
    margin-top -2px
    //border 4px solid transparent
    border-bottom: 1px solid white
    box-shadow 0 1px 1px rgba(0,0,0,0.2)
    width 100%
    z-index 999

.c-precise
  &:after
    right 0
    //border-right-color #444

.c-spectrum
  border-right 1px solid white
  .c-thumb
    z-index 999
    margin auto
    top 0
  &:after
    left 0
    //border-left-color #444


.c-grid
  height $size
  width $size
  display inline-block
  background green
  position relative
  overflow hidden
  // box-shadow 0 0 0 1px rgba(0,0,0,0.2)

.c-wheel
  overflow hidden

.c-looper  
  &:before, &:after
    content: ""
    height: 100%
    width: 100%
    background inherit
    display block
    position absolute
  &:before
    top 100%
  &:after
    bottom 100%

.c-thumb
  position absolute
  height $thumb + 4
  width $thumb + 4
  border-radius 50%
  border 1px solid white
  cursor: pointer
  background white
  //-webkit-transition: all 0.05s
  .c-hue &
    margin-top -1px
    margin-left -7px
    border: 0
    width 24px
    height 0
    border-bottom 1px solid black
    // box-shadow 0 0 0 1px rgba(0,0,0,0.08);
  .c-grid &
    margin -5px
    box-shadow 0 1px 1px 1px rgba(0,0,0,0.1)//, inset 0 1px 1px 1px rgba(0,0,0,0.2)
  .c-alpha &
    margin-top -5px
    margin-left -5px
    //box-shadow inset 0 0 0 1px rgba(0,0,0,0.08)//, inset 0 1px 1px 1px rgba(0,0,0,0.2)


.c-opacity
  margin 0 10px
  {$transparencygrid}

.c-thumb:hover
  background #eee

