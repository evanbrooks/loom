*
  box-sizing border-box
  margin 0
  padding 0
  -webkit-user-select none

$size = 220px
$thumb = 20px
$bg = white

$transparencygrid = 
  background-size: 22px 22px;
  background-position: 0 0, 11px 11px;
  background-image: linear-gradient(45deg, rgba(120,120,120,0.3) 25%, transparent 25%, transparent 75%, rgba(120,120,120,0.3) 75%, rgba(100,100,100,0.2)),
                    linear-gradient(45deg, rgba(120,120,120,0.3) 25%, transparent 25%, transparent 75%, rgba(120,120,120,0.3) 75%, rgba(100,100,100,0.2));



.c-picker *
  // outline red 1px solid

body
  background white

.c-picker
  position fixed
  top 50px
  left 50px
  line-height 0
  border-radius 2px
  // border 2px solid #444
  box-shadow 0 1px 1px 1px rgba(0,0,0,0.1), 0 8px 30px rgba(0,0,0,0.05)
  background white
  padding 10px

.c-preview
  height 50px
  margin-bottom 10px
  position relative
  &:before
    content ""
    position absolute
    z-index -1
    top 0
    right 0
    left 0
    bottom 0
    {$transparencygrid}

.c-bg
  display inline-block

.c-format
  background white
  display inline-block
  height $size
  vertical-align middle
  padding 1em
  font-family Consolas
  font-size 12px
  color #aaa
  display none
  div
    line-height normal

.c-hue, .c-value, .c-opacity
  padding 0
  margin-right: 10px
  display inline-block
  vertical-align middle

.c-opacity
  margin 0
  // border-right: 5px solid white
  // position absolute
  // right: - $thumb
  // top: 0

.c-alpha
  width 4px !important
  height: $size - $thumb !important
  border-radius: 2px
  box-shadow inset 0 0 1px rgba(0,0,0,0.2)


.c-slider, .c-wheel
  height $size
  width $thumb
  display inline-block
  background blue
  position relative

.c-wheel
  cursor: ns-resize



.c-precise
  width: 2px

.c-wheel
  &:after
    content ""
    position absolute
    top 50%
    margin-top -2px
    //border 4px solid transparent
    border-bottom: 1px solid white
    box-shadow 0 1px 1px rgba(0,0,0,0.2)
    width 100%
    z-index 999

.c-precise
  &:after
    right 0
    //border-right-color #444

.c-spectrum
  border-right 1px solid white
  width $thumb * 2
  .c-thumb
    z-index 999
    margin auto
    top 0
    bottom 0
    pointer-events: none
  &:after
    left 0
    //border-left-color #444


.c-grid
  height $size
  width $size
  display inline-block
  background green
  position relative
  // box-shadow 0 0 0 1px rgba(0,0,0,0.2)

.c-wheel
  overflow hidden

.c-looper  
  &:before, &:after
    content: ""
    height: 100%
    width: 100%
    background inherit
    display block
    position absolute
  &:before
    top 100%
  &:after
    bottom 100%

.c-thumb
  position absolute
  width $thumb + 4
  height $thumb + 4
  border-radius 50%
  border 1px solid white
  cursor: pointer
  background white
  //-webkit-transition: all 0.05s
  .c-grid &
    margin -13px
    box-shadow 0 1px 1px 1px rgba(0,0,0,0.1)//, inset 0 1px 1px 1px rgba(0,0,0,0.2)
  .c-alpha &
    margin-top -13px
    margin-left -10px
    //box-shadow inset 0 0 0 1px rgba(0,0,0,0.08)//, inset 0 1px 1px 1px rgba(0,0,0,0.2)


.c-opacity
  margin 0 10px
  {$transparencygrid}

.c-thumb:hover
  background #eee

